<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.guilford.cardgame.GUI.SimulationPageController">
<BorderPane prefHeight="1372.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <top>
<TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <tabs>
        <Tab text="Plants Parameters">
            <AnchorPane>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="580.0" spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                    <TextField  fx:id="lifeSpanPlant" alignment="CENTER" promptText="Plant Life Span" />
                    <Slider fx:id="plantDeathProbabilitySlider"   max="1.0" prefHeight="38.0" prefWidth="247.0" showTickLabels="true" showTickMarks="true" snapToTicks="false" value="0.5" />
                </HBox>
                     <Label layoutX="301.0" layoutY="92.0" text="Probability Plant Death At Old Age" />
                     <Label fx:id="plantDeathPercentageLabel" layoutX="363.0" layoutY="127.0" text="Label" />
            </AnchorPane>
        </Tab>
        <Tab text="Plant Eaters Parameters">
            <AnchorPane>
                <HBox alignment="CENTER" spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                    <TextField fx:id="lifeSpanPlantEater" alignment="CENTER" promptText="Plant Life Span" />
                    <Slider fx:id="probabilityOldAgeDeathPlantEater" max="1.0" prefWidth="200.0" showTickLabels="true" showTickMarks="true" snapToTicks="false" value="0.5" />
                    <Slider fx:id="amountOfPlantMaxChewed" max="1.0" prefWidth="200.0" showTickLabels="true" showTickMarks="true" snapToTicks="false" value="0.5" />
                    <Slider fx:id="amountOfFoodNeedToChew" max="1.0" prefWidth="200.0" showTickLabels="true" showTickMarks="true" snapToTicks="false" value="0.5" />
                    <Slider fx:id="floorOnChewAmount" max="1.0" prefWidth="200.0" showTickLabels="true" showTickMarks="true" snapToTicks="false" value="0.5" />
                    <Slider fx:id="lowerBoundNumPlantsToChew" max="1.0" prefWidth="200.0" showTickLabels="true" showTickMarks="true" snapToTicks="false" value="0.5" />
                    <Slider fx:id="upperBoundNumPlantsToChew" max="1.0" prefWidth="200.0" showTickLabels="true" showTickMarks="true" snapToTicks="false" value="0.5" />
                </HBox>

            </AnchorPane>
        </Tab>
        <Tab text="Meat Eaters Parameters">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
        </Tab>
        <Tab text="Overall Simulation Parameters">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
        </Tab>


    </tabs>
</TabPane>
    </top>
    <center>
<ScrollPane fitToWidth="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <stylesheets>
                <URL value="@styles.css" />
            </stylesheets>

            <ScatterChart fx:id="plantGraph" prefHeight="376.0" prefWidth="557.0" styleClass="small-scatter" title="Plants">
                <xAxis>
                    <NumberAxis label="Day" side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Plant Biomass" side="LEFT" />
                </yAxis>
            </ScatterChart>

            <ScatterChart fx:id="plantEaterGraph" prefHeight="400.0" prefWidth="500.0" styleClass="small-scatter" title="Plant Eaters">
                <xAxis>
                    <NumberAxis label="Day" side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Plant Eater Biomass" side="LEFT" />
                </yAxis>
            </ScatterChart>

            <ScatterChart fx:id="meatEaterGraph" prefHeight="400.0" prefWidth="500.0" styleClass="small-scatter" title="Meat Eaters">
                <xAxis>
                    <NumberAxis label="Day" side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Meat Eater Biomass" side="LEFT" />
                </yAxis>
            </ScatterChart>

            <Button fx:id="graphButton" text="Update Graph" />
        </VBox>
    </content>
</ScrollPane>
    </center>
</BorderPane>
</ScrollPane>
